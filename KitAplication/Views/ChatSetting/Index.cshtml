@model KitAplication.Models.ChatSettingsModel
@{
    ViewData["Title"] = "Chat";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="display-box">
    <h5>Inställningar</h5>
    @if (Model != null)
    {
        <div class="shadow-border-small box-bg">
             <div class="mb-3">
                <p class="mt-3 fw-bold">Om Ingen chat är aktiv visas texten i första chatbubblan:</p>
                <p class="shadow-border-small bg-white">@Model.IsNotActiveMessage</p>

                <p class="mt-3 fw-bold">Om en chat är aktiv visas texten i första chatbubblan:</p>
                <p class="shadow-border-small bg-white">@Model.IsActiveMessage</p>
                <p class="mt-3 fw-bold">Om Reponsen från openai resulterar i felmeddelande, svara med:</p>
                <p class="shadow-border-small bg-white">@Model.RequestFailMessage</p>
             </div>
            <a asp-action="Settings" class="button-white" asp-route-id="@Model.Id">Ändra</a>
        </div>
            
            
    }
    else
    {
        <p>Something whent wrong when getting chatSettings</p>
    }
</div>


