@model KitAplication.Models.LinkModel

@{
    ViewData["Title"] = "Radera länk";

    Layout = "_AdminLayout";
}

<div class="display-box">

<h5>Är du säker att du vill radera länk?</h5>
    <div class="shadow-border-small box-bg">
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Url)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Url)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Radera" class="btn btn-danger" />
        </form>
    </div>
    <div class="m-2">
        <a asp-action="Index">Tillbaka</a>
    </div>
</div>
