@model KitAplication.Models.SystemActiveModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var selectedId = ViewData["RouteValueSelectSystem"];
}

<div class="shadow-border-small activate-bg box-margin-top-bottom">
    <form asp-action="ActivateSystem" asp-route-SelectSystem="@selectedId">
     <div class="d-flex justify-content-between align-items-center">
         <div>
                @if (Model.IsActive == true)
                {
                    <label>Detta system är aktivt:</label>
                    <input asp-for=IsActive type="checkbox" checked="@true" />
                }
                else
                {
                    <label>Detta system är aktivt:</label>

                    <input asp-for=IsActive type="checkbox" checked="@false" />

                }
         </div>
         <div>
              <input hidden asp-for="SystemId" />
            <input type="submit" class="button-white" value="Updatera" />
         </div>
           
           
     </div>
</form>

</div>

