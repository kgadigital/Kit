<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KitApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/adminStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KitAplication.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.js"></script>
</head>
<body>
        <div class=" d-flex justify-content-center">
            <div class="admin-container">
                <div class="admin-section">

                    <div class="side-bar">

                        <div>
                            <div class="links-item">
                                <a asp-controller="Admin" asp-action="Index">System</a>
                            </div>

                            <div class="links-item">
                                <a asp-controller="Link" asp-action="Index">Länkar</a>
                            </div>
                            <div class="links-item">
                                <a asp-controller="ChatSetting" asp-action="Index">Chat Inställningar</a>
                            </div>

                        </div>
                        <div class="links-item login">
                            <a asp-controller="Account" asp-action="LogOut" class="login">Logga ut</a>
                        </div>
                    </div>
                    <div class="content">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
